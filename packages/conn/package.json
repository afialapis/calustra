{
  "name": "calustra-conn",
  "version": "0.2.5",
  "description": "A database connector",
  "author": "Donato Lorenzo <donato@afialapis.com>",
  "contributors": [
    "Donato Lorenzo <donato@afialapis.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/afialapis/calustra.git",
    "directory": "packages/conn"
  },
  "bugs": {
    "url": "https://github.com/afialapis/calustra/issues"
  },
  "homepage": "https://calustra.afialapis.com/",
  "files": [
    "lib",
    "dist"
  ],
  "type": "module",
  "main": "./lib/index.cjs",
  "cjs": "./dist/calustra-conn.cjs",
  "module": "./dist/calustra-conn.mjs",
  "exports": {
    "import": "./dist/calustra-conn.mjs",
    "default": "./lib/index.cjs",
    "require": "./dist/calustra-conn.cjs"
  },
  "scripts": {
    "clean-lib": "rm -rf lib && mkdir lib",
    "clean-dist": "rm -rf dist && mkdir dist",
    "clean-site": "rm -rf arredemo",
    "clean-all": "npm run --silent clean-lib && npm run --silent clean-dist && npm run --silent clean-site",
    "purge": "npm run --silent clean-all && rm -fr node_modules package-lock.json",
    "lint": "npx xeira lint --folder=./src",
    "test": "npx xeira test --files=./test/index.mjs",
    "lib": "npm run --silent clean-lib && npx xeira transpile",
    "dist": "npm run --silent clean-dist && npx xeira bundle",
    "site": "npm run --silent clean-site && npx xeira site",
    "prepare": "npm run --silent lint && npm run --silent test && npm run --silent lib && npm run --silent dist && npm run --silent site",
    "reset": "npm run --silent purge && npm i"
  },
  "keywords": [
    "js",
    "orm",
    "sql"
  ],
  "dependencies": {
    "cacheiro": "^0.0.6",
    "calustra-query": "file:../query",
    "farrapa-colors": "^1.0.7",
    "pg-promise": "^11.2.0",
    "sqlite3": "^5.1.5"
  },
  "devDependencies": {
    "xeira": "^0.1.0"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/xeira/configs/eslint.cjs"
    ]
  },
  "babel": {
    "extends": "./node_modules/xeira/configs/babel.cjs"
  }
}
